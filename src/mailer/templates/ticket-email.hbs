      #price-breakdown-table td { background-color: white; }
      #price-breakdown-table td, #price-breakdown-tableth { padding: 8px; }
      #price-breakdown-table tr { border: 2px solid #8e95ab; }
      #price-breakdown-table tr:nth-child(even) { background-color: #eef2f5; }
      #price-breakdown-table tr:hover { background-color: #ddd; }
